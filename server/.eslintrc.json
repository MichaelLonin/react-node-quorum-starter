{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "object-curly-newline": [ "error", { "multiline": true, "consistent": true } ],
    "global-require": [ "off" ],
    "no-return-await": [ "off" ],
    "max-len": [ "error", 120 ],
    "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"]
  }
}
